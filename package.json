{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "My typescript starter template",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "build:fast": "tsc -p tsconfig.build.json --strict false --listEmittedFiles --skipLibCheck --incremental --tsBuildInfoFile ./.tsBuildInfo",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint -c .eslintrc.cjs --ext .ts src",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint -c .eslintrc.cjs --ext .ts src --fix",
    "check": "npm run lint && npm run build:fast",
    "watch": "onchange \"src/**/*.ts\" \"src/*.ts\" -e \"dist/*\" \"tests/*\" -- npm run check",
    "test": "jest",
    "prepare": "husky",
    "dev": "ts-node-dev --respawn src/index.ts",
    "format": "prettier --write .",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leochilds/typescript-starter.git"
  },
  "keywords": [
    "typescript",
    "nodejs"
  ],
  "author": "Leo Childs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leochilds/typescript-starter/issues"
  },
  "homepage": "https://github.com/leochilds/typescript-starter#readme",
  "engines": {
    "node": ">=22.0.0 <23"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "lint-staged": "^16.1.5",
    "onchange": "^7.1.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "winston": "^3.17.0"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm test -- --findRelatedTests --passWithNoTests"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
